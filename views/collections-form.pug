extends base

block content
    .container.mb-5.pb-3
        .overflow-hidden
            .row
                // Content
                section.col-lg-8.pt-lg-4.pb-4.mb-3
                    .pt-2.px-4.ps-lg-0.pe-xl-5
                        // Title
                        .d-sm-flex.flex-wrap.justify-content-between.align-items-center.pb-2
                            h2.h3.py-2.me-2.text-center.text-sm-start
                                    
                        form.collectionForm(data-id=user.id)
                            .mb-3.pb-2
                                label.form-label(for='target') Target Collection
                                input#target.form-control(type='number' value=10000 disabled)
                                .form-text Cannot be edited.
                            .mb-3.pb-2
                                label.form-label(for='actual') Actual Collection
                                input#actual.form-control(type='number')
                                .form-text Your actual Collections made this week.
                            .mb-3.pb-2
                                label.form-label(for='year') Year
                                input#year.form-control(type='number' value=2021 disabled)
                                //- .form-text Your actual Collections made this week.
                            .mb-3.pb-2
                                label.form-label(for='month') Month
                                input#month.form-control(type='text' value="August" disabled)
                                //- .form-text Your actual Collections made this week.
                            .mb-3
                                label(for="week").form-label
                                    | Select Week
                                select(id="week").form-select
                                    option Week 1
                                    option Week 2
                                    option Week 3
                                    option Week 4                    
                            button.btn.btn-primary.d-block.w-100.collectionBtn(type='submit')
                                i.ci-cloud-upload.fs-lg.me-2
                                | Create Collection

