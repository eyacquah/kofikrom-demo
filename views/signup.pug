// Body
// Sign in / sign up modal

body.body
    // Modal with tabs and forms
    // Modal with tabs and forms
    .modall(tabindex="-1", role="dialog")
        .modal-dialog(role="document")
            .modal-content
                .modal-header
                    ul(role="tablist").nav.nav-tabs.card-header-tabs
                        //- li.nav-item
                        //-     a(href="#signin", data-bs-toggle="tab", role="tab", aria-selected="true").nav-link.active
                        //-         i.ci-unlocked.me-2.mt-n1
                        //-         | Sign in
                        li.nav-item
                            a(href="#signup", data-bs-toggle="tab", role="tab", aria-selected="true").nav-link.active
                                i.ci-user.me-2.mt-n1
                                | Sign up
                    button(type="button", class="btn-close", data-bs-dismiss="modal", aria-label="Close")
                .modal-body.tab-content.py-4.alert
                    form(autocomplete="off" novalidate).signUpForm.needs-validation#signup
                        .mb-3
                            label(for="name").form-label
                                | Full name
                            input(type="text", id="name", placeholder="John Doe" required).form-control
                            .invalid-feedback
                                | Please provide your full name.
                            .valid-feedback
                                | Looks good!
                        .mb-3
                            label(for="email").form-label
                                | Email address
                            input(type="email", id="email", placeholder="johndoe@example.com" required).form-control
                            .invalid-feedback
                                | Please choose a valid email address.
                            .valid-feedback
                                | Looks good!
                        .mb-3
                            label(for="role").form-label
                                | Role
                            select(id="role").form-select
                                option(data-id="admin") Admin
                                option(selected data-id="rep") Sales Rep
                            .valid-feedback
                                | Looks good!
                        .mb-3
                            label(for="password").form-label
                                | Password
                            .password-toggle
                                input(type="password", id="password" required).form-control
                            .invalid-feedback
                                | Please choose a password.
                            .valid-feedback
                                | Looks good!
                                label.password-toggle-btn
                                    input(type="checkbox").password-toggle-check
                                    span.password-toggle-indicator
                        .mb-3
                            label(for="passwordConfirm").form-label
                                | Confirm password
                            .password-toggle
                                input(type="password", id="passwordConfirm" required).form-control
                            .invalid-feedback
                                | Please choose a password.
                            .valid-feedback
                                | Looks good!
                                label.password-toggle-btn
                                    input(type="checkbox").password-toggle-check
                                    span.password-toggle-indicator
                        button(type="submit", class="btn btn-primary d-block btn-shadow") Sign Up



                    //- include _footer
